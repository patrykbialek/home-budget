{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@authentication/*": ["src/app/authentication/*"],
      "@dashboard/*": ["src/app/dashboard/*"],
      "@shared/*": ["src/app/shared/*"],
      "@settings/*": ["src/app/settings/*"],
      "@transactions/*": ["src/app/transactions/*"]
    }
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
